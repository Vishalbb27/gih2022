<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Doctor</title>
    <link rel="stylesheet" href="patient.css" />
    <script
      src="https://kit.fontawesome.com/1da53a3171.js"
      crossorigin="anonymous"
    ></script>
    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Righteous&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav>
      <div class="left">
        <img src="/assets/images/logo.png" alt="" width="70" height="70" />
        <p>ALR-DOC</p>
      </div>
      <div class="right">
        <i class="fa-solid fa-user"></i>
        <p><%=name%></p>
      </div>
    </nav>
    <section class="main_patient">
      <div class="leftmain">
        <p><a href="./patient">Profile</a></p>
        <p><a href="./clinic">Pharmacy</a></p>
        <p><a href="./feed">Feed</a></p>
        <p><a href="https://peaceful-brook-19119.herokuapp.com/">Contact</a></p>
      </div>
      <div class="rightmain">
        <div class="top">
          <div class="topleft">
            <i class="fa fa-user" aria-hidden="true"></i>
          </div>
          <div class="topright" style="text-align: left;">
            <p>Name : <%=name%></p>
            <p>Gender : <%=gender%></p>
            <p>Age : <%=age%></p>
            <p>Phone : <%=phone%></p>
            <p>Address : <%=address%></p>
          </div>
        </div>
        <div class="bottom">
          <h1>Health Data</h1>
          <p id="location"> </p>
          <p id="batt"> </p>

          <p>Temperature&nbsp : <%=temp%> Â°C</p>
        </div>
      </div>
    </section>
    <script>
      var loc = document.getElementById("location");
      navigator.geolocation.getCurrentPosition(function (position) {
        var pos = position.coords.latitude + "," + position.coords.longitude;
        var long = position.coords.longitude;
        var lat = position.coords.latitude;
        var link = "https://maps.google.com/?q=" + lat + "," + long;
        loc.innerHTML =`<a href=${link} style="color: #59a700; cursor: pointer;" target="_blank">Location &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp: ${pos}&#128279;</a>`
      });

      var bat = document.getElementById("batt");
      navigator.getBattery().then(function (battery) {
        bat.innerHTML = `Heart Rate &nbsp&nbsp&nbsp: &nbsp${battery.level * 100} bpm`;
      });

      


      
      
    </script>
  </body>
</html>
